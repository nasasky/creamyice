.page2 {
margin-top: 10px;
}
.mr10 {
margin-right: 10px;
}
.page2 .main {
  background: #f2f2f2 !important;
  width: 100%;
  height: 100%;

}
.page2 .icon-true {
  color: #999;
}
.color333 {
  color: #333;
}
.page2 .active {
  color: #ff7800!important;
}
.page2 .pro {
  align-items: center;
  justify-content: space-around;
  font-size: 32rpx;
}
.page2 .pro>.icon-true {
  color: #ddd;
}
.page2 .pro .iconfont {
  font-size: 50rpx;
  padding: 0rpx;  
  color: #666;
}
.page2 .pro .icon-true {
  color: #ddd;
}
.page2 .pro:nth-child(1) {
  margin-top: 10rpx;
}
.page2 .padding {
  padding-bottom: 230rpx;
}
.page2 .pro image { 
  width: 80px;
  height: 75px; 
}
.page2 .settlement {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 9;
  background: white;
  border-top: 2rpx #ddd solid;
}
.page2 .tlement {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page2 .tlement .iconfont {
  font-size: 40rpx;
}
.page2 .message {
  width: 400rpx;  
  margin-left: 20rpx;
}
.page2 .orderNum {
  padding: 0 30rpx;
}
.page2 .message>view {
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.orderLeft {
  display: flex;
  align-items: center;
}
.otherMoney {
  padding-top: 10rpx;
  color: #666;
  font-size: 28rpx;
}
.page2 .buycar_icon {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 50%;
  background: #ff7800;
  color:#FFF;
  margin-left: 40rpx;
}
.page2 .buycar_num {
  text-align: center;
  line-height: 28rpx;
  background:#ffe400;
  color:#ff7800;
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
  font-size: 20rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.page2 .totalMoney {
  margin-left: 40rpx;
}
.page2 .toPay {
  padding: 40rpx 65rpx;
  background: #ff7800;
  color: #FFF;
}
.page2 .disablePay {
  padding: 40rpx 80rpx;
  background: #ccc;
  color: #FFF;
}
