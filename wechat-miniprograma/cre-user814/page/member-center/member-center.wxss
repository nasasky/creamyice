@import "../../common/weui.wxss";
.bg-xian{
  border-bottom: 1px solid #DDD;
}

.header-bg{
background-image: linear-gradient(180deg,#e96a4a,#e96a4a);
position: relative;
overflow: hidden;
padding-top: 30px;
padding-bottom: 30px;
}

.info{
float: left;
padding-right: 110px;
height: 100%;
box-sizing: border-box;
width: 100%;
}
.avatar{
display: block;
width: 58px;
margin:auto;
height: 58px;
border-radius: 50%;
border: 2px solid #f3f3f3;
overflow: hidden;
}
.avatar-tx {
background-size: cover;
background-position: 50%;
background-repeat: no-repeat;
width: 100%;
height: 100%;
}
.login{
height: 100%;
display: -webkit-box;
display: -ms-flexbox;
display: flex;
-webkit-box-align: center;
-ms-flex-align: center;
align-items: center;
padding-right: 18px;
}
.login-btn {
color: #fff;
text-align: center;
font-size: 14px;
margin-top: 10px;
display: block;
}
.consultant {
color: #fff;
font-size: 12px;
line-height: 28px;
border: 1px solid #fff;
border-radius: 20px;
width: 300px;
margin: auto;
height: 28px;
padding: 0 12px;
}
.weui-cell{
border-bottom: 1px solid #ddd;
}